<UserControl x:Class="TaxMeApp.views.ControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaxMeApp.views" xmlns:viewmodels="clr-namespace:TaxMeApp.viewmodels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.DataContext>
        <viewmodels:ControlViewModel/>
    </UserControl.DataContext>

    <Grid Background="White">
        <DockPanel>
            <StackPanel DockPanel.Dock="Left" 
                    Background="LightGray"
                    Width="200" Height="700">
                <TextBlock Text="Control Panel"
                           FontSize="20"
                           Margin="5, 5, 5, 5"/>
                <Separator Margin="10,10,10,10"/>
                <TextBlock Text="Year"
                           Margin="5, 5, 5, 5"/>
                <ComboBox x:Name="YearInput"
                            ItemsSource="{Binding Path = YearList}" 
                            SelectedItem="{Binding Path = SelectedYear}"
                            Margin="5, 5, 5, 15"
                            Width="175"/>
                <TextBlock Text="Slant Tax Maximum %"
                           Margin="5, 5, 5, 5"/>
                <TextBlock FontSize="20"
                           HorizontalAlignment="Center" 
                           Text="{Binding MaxTaxRate}"/>
                <Slider IsSnapToTickEnabled="True" 
                        Margin="5, 5, 5, 15"
                        Minimum="0"
                        Maximum="100"
                        TickFrequency="5"
                        TickPlacement="BottomRight"
                        Value="{Binding MaxTaxRate}"
                        Width="175"/>
                <TextBlock Text="Tax Brackets at Max Rate"
                           Margin="5, 5, 5, 5"/>
                <TextBlock FontSize="20"
                           HorizontalAlignment="Center" 
                           Text="{Binding MaxBracketCount}"/>
                <Slider IsSnapToTickEnabled="True" 
                        Margin="5, 5, 5, 15"
                        Minimum="0"
                        Maximum="10"
                        TickFrequency="1"
                        TickPlacement="BottomRight"
                        Value="{Binding MaxBracketCountSlider, Mode=TwoWay}"
                        Width="175"/>
                <TextBlock Margin="5,15,5,5" 
                           Text="Display:"/>
                <CheckBox Content="Number of Returns"
                          IsChecked="{Binding ShowNumberOfReturns}"
                          Margin="20,5,5,5"/>
                <CheckBox Content="Tax Revenue (Old System)"
                          IsChecked="{Binding ShowOldRevenue}"
                          Margin="20,5,5,5"/>
                <CheckBox Content="Tax Revenue (New System)"
                          IsChecked="{Binding ShowNewRevenue}"
                          Margin="20,5,5,5"/>
                <CheckBox Content="Percent of Income (Old)"
                          IsChecked="{Binding ShowOldPercentage}"
                          Margin="20,5,5,5"/>
                <CheckBox Content="Percent of Income (New)"
                          IsChecked="{Binding ShowNewPercentage}"
                          Margin="20,5,5,5"/>
            </StackPanel>

            <local:GraphView DataContext="{Binding Path=GraphVM}" 
                             DockPanel.Dock="Top"
                             Height="400"/>

            <Grid DockPanel.Dock="Bottom"
                  Width="450"
                  Height="250">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Grid.ColumnSpan="2"
                           FontSize="20"
                           HorizontalAlignment="Center"
                            Text="Output"/>

                <TextBlock Grid.Row="2"
                           Text="Number of people under poverty line: "/>
                <TextBlock Grid.Column="1"
                           Grid.Row="2"
                           HorizontalAlignment="Right"
                           Text="{Binding Path = NumPovertyPopOutput}"/>

                <TextBlock Grid.Row="3" 
                           Text="Number of people paying maximum tax rate: "/>
                <TextBlock Grid.Column="2"
                           Grid.Row="3" 
                           HorizontalAlignment="Right"
                           Text="{Binding Path = NumMaxPopOutput}"/>

                <TextBlock Grid.Row="4" 
                           Text="Total Revenue Before Slant Tax: "/>
                <TextBlock Grid.Column="2"
                           Grid.Row="4"
                           HorizontalAlignment="Right" 
                           Text="{Binding Path = TotalRevenueOldOutput}"/>

                <TextBlock Grid.Row="5" 
                           Text="Total Revenue After Slant Tax: "/>
                <TextBlock Grid.Column="2"
                           Grid.Row="5"
                           HorizontalAlignment="Right" 
                           Text="{Binding Path = TotalRevenueNewOutput}"/>

                <TextBlock Grid.Row="6" 
                           Text="Revenue Difference: "/>
                <TextBlock Grid.Column="2" 
                           Grid.Row="6" 
                           HorizontalAlignment="Right" 
                           Text="{Binding Path = RevenueDifferenceOutput}"/>

            </Grid>
        </DockPanel>
    </Grid>
</UserControl>
