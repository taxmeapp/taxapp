<UserControl x:Class="TaxMeApp.views.ControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaxMeApp.views" xmlns:viewmodels="clr-namespace:TaxMeApp.viewmodels"
             mc:Ignorable="d">

    <StackPanel Background="LightGray"
                MinHeight="700"
                MinWidth="200">
        <TextBlock Text="Control Panel"
                           FontSize="20"
                           Margin="5, 5, 5, 5"/>
        <Separator Margin="10,10,10,10"/>
        <TextBlock Text="Year"
                           Margin="5, 5, 5, 5"/>
        <ComboBox x:Name="YearInput"
                            ItemsSource="{Binding YearList}" 
                            SelectedItem="{Binding SelectedYear}"
                            Margin="5, 5, 5, 15"
                            Width="175"/>
        <TextBlock Text="Slant Tax Maximum %"
                           Margin="5, 5, 5, 5"/>
        <TextBlock FontSize="20"
                           HorizontalAlignment="Center" 
                           Text="{Binding MaxTaxRate}"/>
        <Slider IsSnapToTickEnabled="True" 
                        Margin="5, 5, 5, 15"
                        Minimum="0"
                        Maximum="100"
                        TickFrequency="5"
                        TickPlacement="BottomRight"
                        Value="{Binding MaxTaxRate}"
                        Width="175"/>
        <TextBlock Text="Tax Brackets at Max Rate"
                           Margin="5, 5, 5, 5"/>
        <TextBlock FontSize="20"
                           HorizontalAlignment="Center" 
                           Text="{Binding MaxBracketCount}"/>
        <Slider IsSnapToTickEnabled="True" 
                        Margin="5, 5, 5, 15"
                        Minimum="0"
                        Maximum="10"
                        TickFrequency="1"
                        TickPlacement="BottomRight"
                        Value="{Binding MaxBracketCountSlider, Mode=TwoWay}"
                        Width="175"/>
        <TextBlock Text="Tax Brackets Living in Poverty"
                           Margin="5, 5, 5, 5"/>
        <TextBlock FontSize="20"
                           HorizontalAlignment="Center" 
                           Text="{Binding PovertyLineIndex}"/>
        <Slider IsSnapToTickEnabled="True" 
                        Margin="5, 5, 5, 15"
                        Minimum="0"
                        Maximum="10"
                        TickFrequency="1"
                        TickPlacement="BottomRight"
                        Value="{Binding PovertyLineIndexSlider, Mode=TwoWay}"
                        Width="175"/>
        <TextBlock Margin="5,15,5,5" 
                           Text="Display:"/>
        <CheckBox Content="Number of Returns"
                          IsChecked="{Binding ShowNumberOfReturns}"
                          Margin="20,5,5,5"/>
        <CheckBox Content="Tax Revenue (Old System)"
                          IsChecked="{Binding ShowOldRevenue}"
                          Margin="20,5,5,5"/>
        <CheckBox Content="Tax Revenue (New System)"
                          IsChecked="{Binding ShowNewRevenue}"
                          Margin="20,5,5,5"/>
        <CheckBox Content="Percent of Income (Old)"
                          IsChecked="{Binding ShowOldPercentage}"
                          Margin="20,5,5,5"/>
        <CheckBox Content="Percent of Income (New)"
                          IsChecked="{Binding ShowNewPercentage}"
                          Margin="20,5,5,5"/>
        <Button Command="{Binding SettingsBtnCommand}"
                Content="Settings" 
                Margin="0,100,0,0" 
                Width="150"/>
    </StackPanel>
</UserControl>
