<UserControl x:Class="TaxMeApp.views.ControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaxMeApp.views" xmlns:viewmodels="clr-namespace:TaxMeApp.viewmodels"
             mc:Ignorable="d">
    <ScrollViewer VerticalScrollBarVisibility="Visible">
        <StackPanel Background="LightGray"
                    MinHeight="915"
                    MinWidth="200">
            <TextBlock Text="Control Panel"
                               FontSize="20"
                               Margin="5, 5, 5, 5"/>
            <Separator Margin="10,10,10,10"/>
            <TextBlock Text="Year"
                               Margin="5, 5, 5, 5"/>
            <ComboBox x:Name="YearInput"
                                ItemsSource="{Binding YearList}" 
                                SelectedItem="{Binding SelectedYear}"
                                Margin="5, 5, 5, 15"
                                Width="175"/>
            <TextBlock Text="Tax Plan"
                               Margin="5, 5, 5, 5"/>
            <ComboBox ItemsSource="{Binding TaxPlansList}" 
                    SelectedItem="{Binding SelectedTaxPlanName}"
                    Margin="5, 5, 5, 15"
                    Width="175"/>
            <Button Command="{Binding AddTaxPlanBtnCommand}" 
                    Content="Add Tax Plan"
                    Margin="0, 5, 0, 5"
                    Width="175"/>
            <Button Command="{Binding SaveTaxPlanBtnCommand}"
                    Content="Save Tax Plan"
                    Margin="0,5,0,5"
                    Width="175"/>
            <Button Command="{Binding DeleteTaxPlanBtnCommand}"
                    Content="Delete Tax Plan"
                    Margin="0, 5, 0, 5"
                    Width="175"
                    IsEnabled="{Binding DeleteTaxPlanBtnEnabled}"/>


            <TextBlock x:Name="SlantTaxMaxRateLabel" Text="Slant Tax Maximum %"
                               Margin="5, 5, 5, 5"/>
            <TextBlock FontSize="20"
                               HorizontalAlignment="Center" 
                               Text="{Binding MaxTaxRate}"/>
            <Slider x:Name="SlantTaxMaxRateSlider" IsSnapToTickEnabled="True" 
                            Margin="5, 5, 5, 15"
                            Minimum="0"
                            Maximum="100"
                            TickFrequency="5"
                            TickPlacement="BottomRight"
                            Value="{Binding MaxTaxRate}"
                            Width="175"/>
            <TextBlock x:Name="TaxBracketsLabel" Text="Tax Brackets at Max Rate"
                               Margin="5, 5, 5, 5"/>
            <TextBlock FontSize="20"
                               HorizontalAlignment="Center" 
                               Text="{Binding MaxBracketCount}"/>
            <Slider x:Name="TaxBracketsSlider" IsSnapToTickEnabled="True" 
                            Margin="5, 5, 5, 15"
                            Minimum="0"
                            Maximum="10"
                            TickFrequency="1"
                            TickPlacement="BottomRight"
                            Value="{Binding MaxBracketCountSlider, Mode=TwoWay}"
                            Width="175"/>
            <TextBlock Text="Tax Brackets Living in Poverty"
                           Margin="5, 5, 5, 5"/>
            <TextBlock FontSize="20"
                           HorizontalAlignment="Center" 
                           Text="{Binding PovertyLineBrackets}"/>
            <Slider IsSnapToTickEnabled="True" 
                        Margin="5, 5, 5, 15"
                        Minimum="-1"
                        Maximum="9"
                        TickFrequency="1"
                        TickPlacement="BottomRight"
                        Value="{Binding PovertyLineIndexSlider, Mode=TwoWay}"
                        Width="175"/>
            <Button Margin="15, 5, 15, 5"
                    Command="{Binding AutoFitSlantTaxBtnCommand}" 
                    Content="Auto-Fit Slant Tax"/>
            <TextBlock Text="Bracket"
                               Margin="5, 5, 5, 5"/>
            <ComboBox x:Name="BracketInput"
                                ItemsSource="{Binding BracketList}" 
                                SelectedItem="{Binding SelectedBracket, Mode=TwoWay}"
                                Margin="5, 5, 5, 15"
                                Width="175"/>
            <TextBlock x:Name="TaxRateLabel" Text="Tax Rate"
                               Margin="5, 5, 5, 5"/>
            <TextBlock FontSize="20"
                               HorizontalAlignment="Center" 
                               Text="{Binding SelectedTaxRate}"/>
            <Slider x:Name="TaxRateSlider" IsSnapToTickEnabled="True" 
                            Margin="5, 5, 5, 15"
                            Minimum="0"
                            Maximum="100"
                            TickFrequency="2.5"
                            TickPlacement="BottomRight"
                            Value="{Binding Path=TaxRateSlider, Mode=TwoWay}"
                            Width="175"/>
            <TextBlock Margin="5,15,5,5" 
                               Text="Display:"/>
            <CheckBox Content="Lock Tax Rates"
                              IsChecked="{Binding LockTaxRates, Mode=TwoWay}"
                              Margin="20,5,5,0"/>
            <TextBlock FontSize="20"
                               HorizontalAlignment="Center" 
                               Text="{Binding LockNumberSlider}"/>
            <Slider x:Name="LockNumberSlider" IsSnapToTickEnabled="True"
                            Margin="5, 5, 5, 0"
                            Minimum="0"
                            Maximum="10"
                            TickFrequency="1"
                            TickPlacement="BottomRight"
                            Value="{Binding Path=LockNumberSlider, Mode=TwoWay}"
                            Width="175"/>
            <CheckBox Content="Number of Returns"
                              IsChecked="{Binding ShowNumberOfReturns, Mode=TwoWay}"
                              Margin="20,5,5,5"/>
            <CheckBox Content="Tax Revenue (Old System)"
                              IsChecked="{Binding ShowOldRevenue, Mode=TwoWay}"
                              Margin="20,5,5,5"/>
            <CheckBox Content="Tax Revenue (New System)"
                              IsChecked="{Binding ShowNewRevenue, Mode=TwoWay}"
                              Margin="20,5,5,5"/>
            <CheckBox Content="Percent of Income (Old)"
                              IsChecked="{Binding ShowOldPercentage, Mode=TwoWay}"
                              Margin="20,5,5,5"/>
            <CheckBox Content="Percent of Income (New)"
                              IsChecked="{Binding ShowNewPercentage, Mode=TwoWay}"
                              Margin="20,5,5,5"/>
            <CheckBox Content="Universal Basic Income"
                              IsChecked="{Binding ShowUBI, Mode=TwoWay}"
                              Margin="20,5,5,5"/>
            <TextBlock x:Name="UBIBracketsLabel" Text="Brackets that recieve no UBI"
                               Margin="5,15,5,0"/>
            <TextBlock FontSize="20"
                               HorizontalAlignment="Center" 
                               Text="{Binding MaxUBIBracketCount}"/>
            <Slider x:Name="UBIBracketsSlider" IsSnapToTickEnabled="True" 
                            Margin="5,0,5,15"
                            Minimum="0"
                            Maximum="18"
                            TickFrequency="1"
                            TickPlacement="BottomRight"
                            Value="{Binding MaxUBIBracketCountSlider, Mode=TwoWay}"
                            Width="175"/>
            <TextBlock x:Name="MinUBIBracketsLabel" Text="Brackets that recieve max UBI"
                               Margin="5,15,5,0"/>
            <TextBlock FontSize="20"
                               HorizontalAlignment="Center" 
                               Text="{Binding MinUBIBracketCount}"/>
            <Slider x:Name="MinUBIBracketsSlider" IsSnapToTickEnabled="True" 
                            Margin="5,0,5,15"
                            Minimum="0"
                            Maximum="18"
                            TickFrequency="1"
                            TickPlacement="BottomRight"
                            Value="{Binding MinUBIBracketCountSlider, Mode=TwoWay}"
                            Width="175"/>
            <TextBlock x:Name="UBIMax" Text="Max UBI"
                               Margin="5,15,5,0"/>
            <TextBlock FontSize="20"
                               HorizontalAlignment="Center" 
                               Text="{Binding MaxUBI}"/>
            <Slider x:Name="MaxUBISlider" IsSnapToTickEnabled="True" 
                            Margin="5,0,5,15"
                            Minimum="0"
                            Maximum="5000"
                            TickFrequency="250"
                            TickPlacement="BottomRight"
                            Value="{Binding MaxUBISlider, Mode=TwoWay}"
                            Width="175"/>
            <Button Command="{Binding ResetSettingsBtnCommand}"
                    Content="Reset To Default Settings"
                    Margin="0, 30, 0, 0"
                    Width="150"/>
            <Button Command="{Binding ResetTaxRatesBtnCommand}" 
                    Content="Reset Tax Rates"
                    Margin="0, 20, 0, 0"
                    Width="150"/>
            <Button Command="{Binding SettingsBtnCommand}"
                    Content="Settings" 
                    Margin="0,20,0,0" 
                    Width="150"
                    Visibility="Hidden"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>